{
  "name": "otp-test-2",
  "version": "0.0.3",
  "description": "Node.js module to generate and validate sms otp's",
  "license": "UNLICENSED",
  "author": "@destrela",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "ci": "rimraf ./dist && tsc -p tsconfig.build.json",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "format": "pretty-quick --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "release": "standard-version --no-verify",
    "release:major": "standard-version --release-as major --no-verify",
    "release:minor": "standard-version --release-as minor --no-verify",
    "release:patch": "standard-version --release-as patch --no-verify",
    "setup-husky": "rm -rf .husky_backup && mv .husky .husky_backup && npx husky-init && rm -rf .husky && mv .husky_backup .husky",
    "start": "node dist/main.js",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nodemon --config nodemon.json",
    "start:prod": "node dist/main",
    "test": "jest --passWithNoTests",
    "test:coverage": "jest --coverage",
    "test:ver": "jest --verbose",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.3",
    "source-map-support": "^0.5.20",
    "standard-version": "^9.5.0",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "**/*.{ts,json}": [
      "npm run lint",
      "npm run format"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.(t|j)s",
      "!**/dist/**/*",
      "!**/*.module.(t|j)s",
      "!**/src/infrastructure/**/*.(t|j)s",
      "!**/src/main.ts"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    },
    "rootDir": "./",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.(t|j)s$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "directories": {
    "test": "test"
  }
}
